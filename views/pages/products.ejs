<!--Header-->
<%- include("../partials/header.ejs") %>
<!--Navbar-->
<%- include("../partials/navbar_pages.ejs") %>

<main id="main">

  <section class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center" style="margin-top: 60px;">
        <h2>Catálogo de produtos</h2>
        <ol>
          <li><a href="/">Início</a></li>
          <li>produtos</li>
        </ol>
      </div>

    </div>

  </section>

  <section id="products" class="portfolio inner-page">
    <div class="container" data-aos="fade-up">
        
      <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
              <ul id="portfolio-flters">
                  <li data-filter="*" class="filter-active">Todos</li>
                  <% suppliers.forEach(supplier => {%>
                      <li data-filter=".filter-<%= supplier.title %>"><%= supplier.title %></li>
                  <% }) %>
              </ul>
          </div>
      </div>

      <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        <% products.forEach(products => {%>
          <div class="col-md-6 mt-0  portfolio-item filter-<%= products.supplier.title %>">
            <div class="icon-box-portfolio" style="background: #f0f4f8;">
            <i><img src="<%= products.picture %>"></i>
              <h4><%= products.title %></h4>
              <p>Fornecedor: <%= products.supplier.title %></p>
            </div>
          </div>
        <% }) %>  
      </div>

    </div>
  </section>

  </main>

