  <section id="products" class="products">
    <div class="container" data-aos="zoom-in">

      <div class="section-title">
        <h2>Cat√°logo</h2>
        <p>Nossos produtos</p>
      </div>

      <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="5000">
  
        <div class="swiper-wrapper">

          <div class="swiper-slide">
            
            <div class="row" data-aos="fade-up" data-aos-delay="200">
              <% products.forEach(products => {%>
                <div class="col-md-6 mt-4 mt-md-0">
                  <div class="icon-box-product" style="background: #f0f4f8;">
                  <i><img src="<%= products.picture %>"></i>
                    <h4><%= products.title %></h4>
                    <p>Fornecedor: <%= products.supplier.title %></p>
                  </div>
                </div>
              <% }) %>  
            </div>
            
          </div>
        </div>
        
        <br><br>
        <div class="swiper-pagination"></div>
      </div>

      <div class="d-flex align-items-center justify-content-center">
        <a href="/produtos" class="btn btn-secondary" style="color: #fff; background-color: #35a5ed; border-color:#35a5ed;">Conferir lista completa</a>
      </div>

    </div>
  </section>